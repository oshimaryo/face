{

  "manifest_version": 2,
  "name": "Face",
  "version": "0.1",

  "description": "Adds your face to shopping page",

  "icons": {
    "48": "icons/border-48.png"
  },

  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": ["content_scripts/face.js"]
    }
  ],

  "permissions": [
    "activeTab",
    "storage"
  ],

  "browser_action": {
    "default_icon": "icons/border-48.png",
    "default_title": "Face",
    "default_popup": "popup/settings.html"
  },

  "web_accessible_resources": [
    "images/face.png"
  ]
}
