{
  "manifest_version": 3,
  "name": "FACE",
  "version": "0.1",
  "description": "Add your face to web page",
  "icons": {
    "48": "icons/face-48.png",
    "96": "icons/face-96.png",
    "128": "icons/face-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": ["content-scripts/face.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "action": {
    "default_icon": {
      "48": "icons/face-48.png",
      "96": "icons/face-96.png",
      "128": "icons/face-128.png"
    },
    "default_title": "FACE",
    "default_popup": "popup/settings.html"
  }
}